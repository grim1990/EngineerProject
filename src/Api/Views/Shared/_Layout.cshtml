<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BudgetManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <partial name="_LoggedMenu" />
    <div class="space"></div>
    <div class="left__container">
            <div class="logo__holder">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-light">
                <div class="icon__holder">
                    <img class="logo__icon" src="/logoBM.png" alt="Budget plan icon">
                </div>
            </a>
            </div>

        @if (User.Identity!.IsAuthenticated)
        {          
            <div id="authenticated" class="left__menu">
                    <ul class="menu navbar-nav flex-grow-1">
                        <li class="nav-item menu__button">
                            <a asp-area="" asp-controller="Operation" asp-action="Index" class="nav-link text-light">
                                <div class="icon__holder">
                                    <img class="menu__icon" src="/Operations.PNG" alt="Budget plan icon">
                                </div>
                                OPERACJE
                            </a>
                        </li>
                        <li class="nav-item menu__button">
                            <a asp-area="" asp-controller="Account" asp-action="Index" class="nav-link text-light">
                            <div class="icon__holder">
                                <img class="menu__icon" src="/Finances.PNG" alt="Budget plan icon">
                            </div>
                            FINANSE
                            </a>
                        </li>
                        <li class="nav-item menu__button">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="BudgetPlan">
                            <div class="icon__holder">
                                <img class="menu__icon" src="/BudgetPlan.PNG" alt="Budget plan icon">
                            </div>
                            PLAN BUDŻETU
                            </a>
                        </li>
                        <li class="nav-item menu__button">
                            <a class="nav-link text-light" asp-area="" asp-controller="Savings" asp-action="Index">
                            <div class="icon__holder">
                                <img class="menu__icon" src="/Savings.PNG" alt="Budget plan icon">
                            </div>
                            OSZCZĘDNOŚCI
                            </a>
                        </li>
                        <li class="nav-item menu__button">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="BudgetStatus">
                            <div class="icon__holder">
                                <img class="menu__icon" src="/Reports.PNG" alt="Budget plan icon">
                            </div>
                            BILANS ROCZNY
                            </a>
                        </li>
                    </ul>
            </div>
            <div id="authenticated-2" class="rules__menu">
                <ul class="menu navbar-nav flex-grow-1">
                    <li class="nav-item menu__button">
                        <a asp-area="" asp-controller="Home" asp-action="Rules" class="nav-link text-light rules-margin">
                            ZASADY I PRYWATNOŚĆ
                        </a>
                    </li>
                </ul>
            </div>
        }
        </div>
    <div class="right__container">
        <div class="top__section__upper">
            <div class="login__buttons">
                <partial name="_LoginPartial" />
            </div>
        </div>
        <div class="top__section">
            <div>
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
        <div class="left__bar">

        </div>
        <div class="main__section conatiner__fluid">
            <main role="main" class="pb-3 main__section__frame">
                @RenderBody()
            </main>
        </div>
        <footer class="footer text-muted">
            <div class="footer__text">
                &copy; 2024 - Praca inżynierska WSB Merito w&nbsp;Poznaniu
            </div>
        </footer>
    </div>   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
