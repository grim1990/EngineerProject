@model 			MainCategory

@{
    ViewData["Title"] = "USUŃ KATEGORIĘ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form__container__smaller d-sm-flex d-md-flex d-lg-flex d-xl-none d-xxl-none">
    <div class="sm-form-holder">
        <div class="form__frame">
            <div class="x__section">
                <a asp-action="Edit" class="x-button" asp-route-id="@Model?.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                    </svg>
                </a>
            </div>
            <h5 class="header__data__form mt-4 mb-5">Usuwanie kategorii</h5>
            <dl class="details__section">
                <dt class="details__row__right">
                    Nazwa
                </dt>
                <dd class="details__row__left">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="details__row__right">
                    Opis
                </dt>
                <dd class="details__row__left">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="details__row__right">
                    Coroczna
                </dt>
                <dd class="details__row__left">
                    @Html.DisplayFor(model => model.IsAnnual)
                </dd>
                <div class="delete__button__section">
                    <div class="single center mt-5 mb-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Usuń" class="details__button__danger" />
                        </form>
                    </div>
                    <a class="mb-4 grey" asp-controller="Home" asp-action="BudgetPlan">Powrót</a>
                </div>
            </dl>
        </div>
    </div>
</div>

<div class="standard__form sm-none d-sm-none d-md-none d-lg-none d-xl-flex d-xxl-flex">
    <div class="form__frame">
        <div class="x__section">
            <a asp-controller="Home" asp-action="BudgetPlan" class="x-button">X</a>
        </div>
        <h5 class="header__data__form mt-4 mb-5">Usuwanie kategorii</h5>
        <dl class="details__section">
            <dt class="details__row__right">
                Nazwa
            </dt>
            <dd class="details__row__left">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="details__row__right">
                Opis
            </dt>
            <dd class="details__row__left">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="details__row__right">
                Coroczna
            </dt>
            <dd class="details__row__left">
                @Html.DisplayFor(model => model.IsAnnual)
            </dd>
            <div class="delete__button__section">
                <div class="single center mt-5 mb-4">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Usuń" class="details__button__danger" />
                    </form>
                </div>
                <a class="mb-4 grey" asp-controller="Home" asp-action="BudgetPlan">Powrót</a>
            </div>
        </dl>
    </div>
</div>


