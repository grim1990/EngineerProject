@page
@model RegisterModel
@using Microsoft.AspNetCore.Identity


@{
    Layout = "~/Views/Shared/_Layout_login.cshtml";
    ViewData["Title"] = "Rejestracja -";
}

<partial name="_Dropdown_Menu" />
<div class="scroll-frame">
<div class="login__container__smaller">
    <div class="top__section__upper__home">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-light logo__holder__home">
            <div class="icon__holder__home">
                <img class="logo" src="/logoBM.png" alt="Budget plan icon">
            </div>
        </a>
    </div>
        <div class="half__image">
            <img class="full__image__tight" src="/register.png" alt="Budget plan icon">
        </div>
</div>
<div class="login__container__bigger">
    <div class="row login__section">
            <section class="login__frame top__spacing">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="standard__header">Rejestracja</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="input__label margin-small">
                    <h3 class="login__label">
                        Email
                    </h3>
                </div>
                <div class="form-floating margin-small">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="jankowalski@poczta.pl" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input__label mb-2 margin-small">
                    <h3 class="login__label">
                        Hasło
                    </h3>
                </div>
                <div class="form-floating margin-small">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="**********" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="input__label margin-small">
                    <h3 class="login__label">
                        Powtórz hasło
                    </h3>
                </div>
                <div class="form-floating margin-small">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="additional__options mb-4">
                    <div class="checkbox margin-small">
                    </div>
                    <div class="link__section__login">
                       <p class="grey__link">
                            <a class="grey" id="login" asp-area="Identity" asp-page="/Account/Login">Masz już konto? Zaloguj się</a>
                        </p>
                    </div>
                </div>
                <div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg login__button__main">Utwórz konto</button>
                </div>
            </form>
            <h5 class="standard__subheader mt-5">lub</h5>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal mt-4">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit" class="w-100 btn btn-lg login__button__google" name="provider" value="@provider.Name">
                        <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" />
                        <p class="google-text">Zarejestruj się z użyciem konta Google</p>
                        <p class="google-text-sm">Użyj konta Google</p>
                    </button>
                }
            </form>
        </section>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
