@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "LOGOWANIE";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<partial name="_Dropdown_Menu" />
<div class="scroll-frame">
    <div class="login__container__smaller">
        <div class="top__section__upper__home">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-light logo__holder__home">
                <div class="icon__holder__home">
                    <img class="logo" src="/logoBM.png" alt="Budget plan icon">
                </div>
            </a>
        </div>
    </div>
    <div class="login__container__bigger">
        <div class="row login__section">
            <section class="login__frame top__spacing">
                <h2 class="standard__header">Odzyskiwanie konta</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <p>
                    Aby zalogować się bez użycia aplikacji autentykującej użyj jednego z kodów odzyskiwania konta. 
                </p>
                <div class="row">
                    <div class="col-md-4 w-100">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3 w-100">
                                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="RecoveryCode" />
                                <label asp-for="Input.RecoveryCode" class="form-label"></label>
                                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                            </div>
                            <button type="submit" class="w-100 btn btn-lg login__button__main">Zaloguj się</button>
                        </form>
                    </div>
                </div>
                <p class="mt-4">
                    Nie masz dostępu do urządzenia z aplikacją autentykującą?
                    <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">Zaloguj się za pomocą kodów odzyskiwania</a>.
                </p>
            </section>
        </div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
    </div>
</div>


