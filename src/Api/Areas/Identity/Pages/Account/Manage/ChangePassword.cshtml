@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "PANEL UŻYTKOWNIKA";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
        <form class="form__section" id="change-password-form" method="post">
            <h4 class="standard__header mb-4 mt-4">
                ZMIEŃ HASŁO
            </h4>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="input__label mb-3">
                <h5 class="login__label">
                    Obecne hasło
                </h5>
            </div>
            <div class="form-floating-sm w-100 mb-4">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Wprowadź obecne hasło." />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="input__label mb-3">
                <h5 class="login__label">
                    Nowe hasło
                </h5>
            </div>
            <div class="form-floating-sm w-100 mb-4">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Wprowadź nowe hasło." />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="input__label mb-3">
                <h5 class="login__label">
                    Potwierdź nowe hasło
                </h5>
            </div>
            <div class="form-floating-sm w-100 mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Potwierdź nowe hasło." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <button id="update-profile-button" type="submit" class="form__button">Zastosuj zmiany</button>
            </div>
        </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
