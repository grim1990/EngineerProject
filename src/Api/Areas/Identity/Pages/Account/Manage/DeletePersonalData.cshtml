@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "USUŃ KONTO";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<form id="delete-user" class="form__section" id="profile-form" method="post">
    <h4 class="standard__header">
        USUŃ KONTO
    </h4>
    <div class="forgot__info mb-3">
        <h5 class="login__label alert alert-warning" role="alert">
            <strong>Skasowanie danych osobowych spowoduje trwałe usunięcie konta.</strong>
        </h5>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="input__label mb-3">
        <h5 class="login__label">
            Hasło
        </h5>
    </div>
    <div class="form-floating w-100 mb-5">
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Wprowadź hasło."/>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <button id="update-profile-button" type="submit" class="details__button__danger">Usuń konto</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




