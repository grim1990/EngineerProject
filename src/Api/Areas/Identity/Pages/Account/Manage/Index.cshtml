@page
@model IndexModel
@{
    ViewData["Title"] = "PANEL UŻYTKOWNIKA";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
        <form class="form__section" id="profile-form" method="post">
            <h4 class="standard__header">
                ZMIEŃ DANE
            </h4>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="input__label mb-3">
                <h5 class="login__label">
                    Login
                </h5>
            </div>
            <div class="form-floating-sm w-100 mb-5">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
            </div>
            <div class="input__label mb-3">
                <h5 class="login__label">
                    Numer telefonu
                </h5>
            </div>
            <div class="form-floating-sm w-100 mb-5">
                <input type="tel" asp-for="Input.PhoneNumber" class="form-control" placeholder="Wprowadź swój numer telefonu." pattern="[0-9]{9}" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <button id="update-profile-button" type="submit" class="form__button">Zastosuj zmiany</button>
            </div>
        </form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
